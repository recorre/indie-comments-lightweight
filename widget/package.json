{
  "name": "lightweight-comment-widget",
  "version": "1.0.0",
  "description": "A lightweight comment widget using Web Components and PicoCSS",
  "main": "src/comment-widget.js",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx serve .",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx cleancss css/widget.css -o dist/widget.min.css",
    "minify-js": "npx terser src/*.js -o dist/comment-widget.min.js -c -m"
  },
  "keywords": [
    "comments",
    "widget",
    "web-components",
    "pico",
    "lightweight"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "serve": "^14.2.0",
    "terser": "^5.44.0"
  },
  "dependencies": {
    "dompurify": "^3.3.0"
  }
}
